<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.layout.HBox?>
<VBox fx:controller="controllers.MainScreen"
      xmlns="http://javafx.com/javafx/1"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@../css/main.css"
      fx:id="container"
      spacing="15">

    <Text text="Inventory Management System" lineSpacing="15" fx:id="title"/>

    <GridPane fx:id="partsProducts" alignment="CENTER" hgap="10" vgap="10" >
        <GridPane GridPane.rowIndex="0" GridPane.columnIndex="0" hgap="10" vgap="10">

            <Text text="Part" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <HBox alignment="TOP_RIGHT" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">

                <Button text="Search"/>
                <TextField promptText="search"/>

            </HBox>

            <TableView editable="true" prefHeight="250" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>

                    <TableColumn prefWidth="75" text="Part ID"/>
                    <TableColumn prefWidth="125" text="Part Name"/>
                    <TableColumn prefWidth="125" text="Inventory Level"/>
                    <TableColumn prefWidth="125" text="Price Cost per Unit"/>

                </columns>
            </TableView>
            <HBox alignment="TOP_RIGHT" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">

                <Button text="Add"/>
                <Button text="Modify"/>
                <Button text="Delete"/>

            </HBox>

        </GridPane>
        <GridPane GridPane.rowIndex="0" GridPane.columnIndex="1" hgap="10" vgap="10">

            <Text text="Part" style="-fx-font: 15 arial bold" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <HBox alignment="TOP_RIGHT" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">

                <Button text="Search"/>
                <TextField promptText="search"/>

            </HBox>

            <TableView editable="true" prefHeight="250" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>

                    <TableColumn prefWidth="75" text="Part ID"/>
                    <TableColumn prefWidth="125" text="Part Name"/>
                    <TableColumn prefWidth="125" text="Inventory Level"/>
                    <TableColumn prefWidth="125" text="Price Cost per Unit"/>

                </columns>
            </TableView>
            <HBox alignment="TOP_RIGHT" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">

                <Button text="Add"/>
                <Button text="Modify"/>
                <Button text="Delete"/>

            </HBox>

        </GridPane>
    </GridPane>
    <HBox alignment="BASELINE_RIGHT">
        <Button alignment="BASELINE_RIGHT" text="Exit"/>
    </HBox>
</VBox>